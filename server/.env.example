# Copy this file to `server/.env` and fill in real secrets. Do NOT commit your .env to git.

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx          # Your Stripe secret key (starts with sk_)
STRIPE_WEBHOOK_SECRET=whsec_xxx        # Stripe webhook signing secret (from dashboard)

# Email (SMTP) - use SendGrid/Mailgun/SES/SMTP provider
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
EMAIL_FROM="GymTech <no-reply@yourdomain.com>"
ADMIN_EMAIL=you@yourdomain.com

# Admin fallback secret (optional) - used by client during development
ADMIN_SECRET=choose-a-long-random-string

# Firebase / Google service account
# Either set path to JSON file or the JSON content as a string. When deploying to a
# managed provider prefer setting GOOGLE_APPLICATION_CREDENTIALS to the filepath and
# uploading the JSON into the host's secret store.
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Vite client runtime (set on the server host if serving static files)
# If you host the client separately set this in the client build environment instead
VITE_API_URL=https://your-api-domain.com

# Optional: additional configuration
PORT=3000
NODE_ENV=production
# Copy this to server/.env and fill values for SMTP and Stripe

# SMTP settings (used to send orders emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM="GymTech <noreply@example.com>"
ADMIN_EMAIL=admin@example.com
ADMIN_SECRET=replace-with-a-secret-for-server

# Stripe secret key (used by server/index.js)
STRIPE_SECRET_KEY=sk_test_...

# Firebase project id (emulator wrapper uses this)
FIREBASE_PROJECT_ID=demo
